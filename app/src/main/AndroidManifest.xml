<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thiaires.tagpol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/backgroundtagpol"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="thiagoaires.tagpol.View.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="thiagoaires.tagpol.View.DetalhesDeputado"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="thiagoaires.tagpol.View.homeScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="thiagoaires.tagpol.View.Visualization_just_webview"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>